<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExerciseSitupActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/settingsToolbar" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:logo="@drawable/ic_action_name" app:title="Sit-ups"
            app:titleMarginStart="30dp" android:onClick="goBack"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/situp"
            android:id="@+id/imageSitup" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="@+id/settingsToolbar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.494"/>
    <TextView
            android:text="@string/exerciseSitupDescription"
            android:layout_width="340dp"
            android:layout_height="135dp"
            android:id="@+id/exerciseSitup" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageSitup" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="12sp"/>

</android.support.constraint.ConstraintLayout>