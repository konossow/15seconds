<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
            android:text="@string/settingsButtonName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/settingsButtonName" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/settingsButton"
            app:layout_constraintStart_toStartOf="@+id/settingsButton"/>
    <TextView
            android:text="@string/calendaryButtonName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/calendaryButtonName"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/calendaryButton"
            app:layout_constraintTop_toBottomOf="@+id/calendaryButton"/>
    <TextView
            android:text="@string/showoffButtonName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/showoffButtonName" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/showoffButton"
            app:layout_constraintStart_toStartOf="@+id/showoffButton"/>
    <TextView
            android:text="@string/welcome_messege_0"
            android:layout_width="match_parent"
            android:id="@+id/textView" android:textSize="30sp"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="50dp"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/settingsButton"
            android:onClick="goToSettings"
            android:text="@string/settingsButtonName"
            app:layout_constraintTop_toBottomOf="@+id/calendaryButtonName"
            app:layout_constraintStart_toStartOf="@+id/calendaryButtonName" android:layout_marginTop="40dp"/>
    <Button
            android:text="@string/showoffButtonName"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/showoffButton"
            app:layout_constraintTop_toBottomOf="@+id/excersisesButtonName"
            app:layout_constraintStart_toStartOf="@+id/excersisesButtonName" android:layout_marginTop="40dp"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/excersisesButton"
            android:text="@string/excersisesButtonName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="100dp"/>
    <Button
            android:text="@string/calendaryButtonName"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/calendaryButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@+id/excersisesButton"/>
    <TextView
            android:text="@string/excersisesButtonName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/excersisesButtonName"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/excersisesButton"
            app:layout_constraintStart_toStartOf="@+id/excersisesButton"/>
</android.support.constraint.ConstraintLayout>