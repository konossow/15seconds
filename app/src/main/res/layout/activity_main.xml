<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/backgroundColor">
    <TextView
            android:text="@string/settingsButtonName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/settingsButtonName" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/settingsButton"
            app:layout_constraintStart_toStartOf="@+id/settingsButton"/>
    <TextView
            android:text="@string/calendarButtonName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/calendarButtonName"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/calendarButton"
            app:layout_constraintTop_toBottomOf="@+id/calendarButton"/>
    <TextView
            android:text="@string/showoffButtonName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/showoffButtonName" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/showoffButton"
            app:layout_constraintStart_toStartOf="@+id/showoffButton"/>
    <TextView
            android:text="@string/welcome_messege_0"
            android:layout_width="match_parent"
            android:id="@+id/textView" android:textSize="30sp"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="50dp"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/settingsButton"
            android:onClick="goToSettings"
            app:layout_constraintTop_toBottomOf="@+id/calendarButtonName"
            app:layout_constraintStart_toStartOf="@+id/calendarButtonName" android:layout_marginTop="40dp"
            android:background="@drawable/gear"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/showoffButton"
            app:layout_constraintTop_toBottomOf="@+id/exercisesButtonName"
            app:layout_constraintStart_toStartOf="@+id/exercisesButtonName" android:layout_marginTop="40dp"
            android:background="@drawable/face"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/excersisesButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="64dp"
            android:onClick="goToExercises" android:background="@drawable/stretch"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/calendarButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/excersisesButton" android:onClick="goToCalendar"
            android:background="@drawable/calendar"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/exercisesButtonName"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/excersisesButton"
            app:layout_constraintStart_toStartOf="@+id/excersisesButton" android:text="@string/exercisesButtonName"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="156dp" android:id="@+id/button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:onClick="testbtn"/>
</android.support.constraint.ConstraintLayout>