<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">

    <TextView
            android:text="@string/settings"
            android:layout_width="224dp"
            android:layout_height="84dp"
            android:id="@+id/Day" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="40sp"/>
    <TextView
            android:text="@string/day_availability"
            android:layout_width="149dp"
            android:layout_height="49dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="135dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="41dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="from"/>
    android:layout_marginTop="140dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="41dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toEndOf="@+id/editText" android:layout_marginStart="20dp"
            android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent" android:hint="to"/>
    <Spinner
            android:layout_width="132dp"
            android:layout_height="77dp" tools:layout_editor_absoluteY="204dp"
            android:id="@+id/exerciseSpinner" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Exercise Time"
            android:layout_width="163dp"
            android:layout_height="77dp"
            android:id="@+id/textView4"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
</android.support.constraint.ConstraintLayout>